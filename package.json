		"nm": "npm run nodemon",
		"prestart": "npm run build",
		"start": "npm run node",
		"s": "npm start",
		"clean": "npx rimraf dist",
		"c": "npm run clean",
		"prebuild:prod": "npm run clean",
		"prebuild:dev": "npm run clean",
