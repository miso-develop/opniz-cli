		"build:prod": "npx npx tsc --declaration false --declarationMap false --sourceMap false",
		"build:dev": "npx tsc",
		"build": "npm run build:dev",
		"bp": "npm run build:prod",
		"bd": "npm run build:dev",
		"b": "npm run build",
		"watch": "npm run build:dev -- --watch",
		"w": "npm run watch",
		"lint": "npx eslint {src,tests,examples}/**/*.{ts,js}",
		"l": "npm run lint",
		"lint:fix": "npx eslint --fix {src,tests,examples}/**/*.{ts,js}",
		"lf": "npm run lint:fix",
